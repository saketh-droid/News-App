<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="@color/white"
        >
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="@color/lightblue">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/nunito_extrabold"
                    android:padding="5dp"
                    android:text="News4U"
                    android:textColor="@color/brightmirror"
                    android:textSize="50dp"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/user_profile"
                    android:layout_marginLeft="115dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/img"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    />

            </LinearLayout>

        <LinearLayout
            android:layout_height="90sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="10sp"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/videos"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Videos"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:layout_margin="5sp"
                android:paddingLeft="15sp"
                android:paddingRight="15sp"
                android:fontFamily="@font/nunito_extrabold"
                android:textColor="@color/white"
                android:background="@drawable/video_card"
                android:backgroundTint="@color/orangered"
                />

            <Button
                android:id="@+id/articles"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Articles"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:paddingLeft="15sp"
                android:paddingRight="15sp"
                android:layout_margin="5sp"
                android:fontFamily="@font/nunito_extrabold"
                android:textColor="@color/black"
                android:background="@drawable/video_card"
                android:backgroundTint="@color/mirror"
                />

            <ImageView
                android:id="@+id/login"
                android:layout_marginLeft="10dp"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:src="@drawable/login"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            app:shapeAppearanceOverlay="@style/roundedImageView">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="15sp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/lightblue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingRight="10sp">

                    <TextView
                        android:layout_width="500sp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:padding="5sp"
                        android:textSize="30dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center"
                        android:textColor="@color/brightmirror"
                        android:text="Welcome Welcome! Let's dive into the world of news together! 🌍"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/icon"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/icon"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:elevation="18dp"
                android:layout_height="wrap_content"
                android:text="Search🔍 for any News You are Interested in"
                android:textColor="@color/brightmirror"
                android:layout_weight="5"
                android:padding="5sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10sp"
                android:textSize="30dp"
                android:letterSpacing="0.03"
                android:backgroundTint="@color/lightblue"
                android:background="@drawable/rounded_corners2"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="10dp"
                android:paddingRight="20sp"
                app:cardBackgroundColor="@color/lightblue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_corners"
                    >

                    <EditText
                        android:id="@+id/search_bar"
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:padding="15sp"
                        android:fontFamily="@font/nunito_bold"
                        android:textFontWeight="600"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:background="@color/lightblue"
                        android:textColorHint="@color/black"
                        android:hint="Search for News . . ."/>

                    <ImageView
                        android:id="@+id/gif_image"
                        android:layout_width="60sp"
                        android:scaleType="fitCenter"
                        android:layout_height="65sp"
                        android:layout_marginRight="40sp"
                        android:src="@drawable/search"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="5"
                android:background="@drawable/rounded_corners2"
                android:backgroundTint="@color/lightblue"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:letterSpacing="0.03"
                android:padding="5sp"
                android:text="Our Top 3 categories of News"
                android:textColor="@color/brightmirror"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/nunito_bold"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/rounded_corners"
                android:text="🌍 Top 10 International News "
                android:textColor="@color/black"
                android:backgroundTint="@color/lightblue"
                android:textFontWeight="600"
                android:textSize="25dp"
                tools:ignore="HardcodedText" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view1"
                android:layout_width="match_parent"
                android:layout_height="620sp"
                android:background="@drawable/itemset_softcorners"
                android:backgroundTint="@color/mirror"
                android:padding="8sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/nunito_bold"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/rounded_corners"
                android:text="🇮🇳 Top 10 National News"
                android:textColor="@color/black"
                android:backgroundTint="@color/lightblue"
                android:textFontWeight="600"
                android:textSize="25dp"
                tools:ignore="HardcodedText" />



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view3"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/itemset_softcorners"
                android:backgroundTint="@color/mirror"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/nunito_bold"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/rounded_corners"
                android:text="🏠 Top 10 Local News ️"
                android:textColor="@color/black"
                android:backgroundTint="@color/lightblue"
                android:textFontWeight="600"
                android:textSize="25dp"
                tools:ignore="HardcodedText" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view2"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/itemset_softcorners"
                android:backgroundTint="@color/mirror"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>