<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/top_background"
        tools:layout_editor_absoluteY="-50dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Hello! ðŸ‘‹\nPlease Login ðŸ”’"
        android:textColor="#9DFF00"
        android:textSize="30sp"
        android:fontFamily="@font/nunito_extrabold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="580sp"
        android:layout_height="620dp"
        android:gravity="center">

        <Button
            android:id="@+id/Explore_Freely"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginStart="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/nunito_extrabold"
            android:paddingLeft="18sp"
            android:paddingRight="18sp"
            android:text="Explore Freely"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/lightblue"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/phno_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:fontFamily="@font/nunito_extrabold"
            android:textColor="@color/black"
            android:textSize="30sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/phno_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:hint="Enter Your PhNo."
            android:fontFamily="@font/nunito_extrabold"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:gravity="left"
            android:background="@drawable/rounded_corners2"
            android:textColor="@color/black"
            android:backgroundTint="@color/mirror"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/password_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_extrabold"
            android:textColor="@color/black"
            android:textSize="30sp"
            />

        <EditText
            android:id="@+id/password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:hint="Enter Your Password"
            android:fontFamily="@font/nunito_extrabold"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:gravity="left"
            android:background="@drawable/rounded_corners2"
            android:textColor="@color/black"
            android:backgroundTint="@color/mirror"
            android:textSize="25sp" />

        <Button
            android:id="@+id/login_button"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:text="Login"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/green"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="------No account?------"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="22dp"
            android:fontFamily="@font/nunito_extrabolditalic"/>

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Register"
            android:textAlignment="center"
            android:fontFamily="@font/nunito_extrabold"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/brightmirror"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>